var geo = require("geo");
var Cloud = require("ti.cloud");
Cloud.debug = true;
var loginApp = function(user1,password){
		if (Ti.Network.online) {
			Cloud.Users.login({
			    login: user1,
			    password: password,
			}, function (e) {
			    if (e.success) {
			    	var user = e.users[0];
			        var alert = Ti.UI.createAlertDialog({
			        	message: "Thanks for loging in "+ user.first_name,
			        	title: "Login Succesful",
			        });
			        geo.currentLocation();
			        alert.show();
			        
			        
			    }else{
			var alert2 = Ti.UI.createAlertDialog({
			        	message: "Invalid username/password\nPlease try again",
			        	title: "Login Error",
			        });
			        alert2.show();
			      };
			});
		
		};
		
		
		
		Cloud.Events.query(function (e) {
	    if (e.success) {
	        alert('Success:\n' +
	            'Count: ' + e.events.length);
	        for (var i = 0; i < e.events.length; i++) {
	            var event = e.events[i];
	           if(event.details == "Wednesday"){
	            var post = {
	            	Wednesday: {
						name: event.name,
						id: event.id,
						},
					};	
				};
				
				
					
			
					console.log(days);
					days.push(post);
					 
	        };
	    } else {
	        alert('Error:\n' +
	            ((e.error && e.message) || JSON.stringify(e)));
	    }
	   
	});
	
	
};


exports.loginApp = loginApp;


	
	
